<UserControl x:Class="PressPlay.Timeline.TimelineHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PressPlay.Timeline"
             mc:Ignorable="d"
             d:DesignHeight="30"
             d:DesignWidth="2000">

    <!-- Named Canvas for dynamic children -->
    <Canvas x:Name="RootCanvas"
      Height="30"
      Background="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:TimelineControl}}}"
            HorizontalAlignment="Stretch" />

</UserControl>