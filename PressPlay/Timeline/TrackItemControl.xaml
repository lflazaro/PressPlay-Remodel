<Border x:Class="PressPlay.Timeline.TrackItemControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PressPlay.Timeline"
        xmlns:models="clr-namespace:PressPlay.Models"
        xmlns:converters="clr-namespace:PressPlay.Converters"
        mc:Ignorable="d"
        BorderThickness="1"
        VerticalAlignment="Stretch"
        Height="100"
        SizeChanged="Border_SizeChanged"
        d:DesignHeight="50" d:DesignWidth="100">

    <Border.Width>
        <MultiBinding Converter="{converters:TrackItemDataToLengthConverter}">
            <Binding Path="Project" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TimelineControl}" />
            <Binding Path="Project.TimelineZoom" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TimelineControl}" />
            <Binding Path="." />
            <Binding Path="Start" />
            <Binding Path="End" />
        </MultiBinding>
    </Border.Width>

    <Border.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Cut" Click="CutItem_Click" InputGestureText="Ctrl+X" />
            <MenuItem Header="Copy" Click="CopyItem_Click" InputGestureText="Ctrl+C" />
            <Separator />
            <MenuItem Header="Delete" Click="DeleteItem_Click" InputGestureText="Del" />
        </ContextMenu>
    </Border.ContextMenu>

    <Border.Style>
        <Style TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Type}" Value="Video">
                    <Setter Property="Background" Value="#1366a2" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Image">
                    <Setter Property="Background" Value="#a44d00" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="Audio">
                    <Setter Property="Background" Value="#0d3a20" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsSelected}" Value="False">
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="Opacity" Value="0.9" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="White" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="Opacity" Value="1.0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Border.Style>

    <Grid>
        <Canvas ClipToBounds="True">

            <Grid IsHitTestVisible="False">
                <Border Height="100">
                    <Image x:Name="img" Stretch="UniformToFill">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="Audio">
                                        <Setter Property="Source">
                                            <Setter.Value>
                                                <MultiBinding Converter="{converters:AudioTrackItemThumbnailGeneratorConverter}">
                                                    <Binding Path="Project" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TimelineControl}" />
                                                    <Binding />
                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TrackItemControl}" />
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Border>

                <Border Grid.Column="0" Height="50" Width="80" HorizontalAlignment="Left">
                    <Image Stretch="Uniform" HorizontalAlignment="Left" Source="{Binding Thumbnail}" />
                </Border>

                <TextBlock Text="{Binding Name}" Padding="3,0" Foreground="WhiteSmoke" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBlock.Background>
                        <SolidColorBrush Color="#1b1e20" Opacity="0.5" />
                    </TextBlock.Background>
                </TextBlock>
                <TextBlock Text="{Binding Note}" Padding="3,0" Foreground="WhiteSmoke" VerticalAlignment="Bottom" />
            </Grid>
            <local:FadeControl ControlType="Left" />
            <local:FadeControl ControlType="Right" />
        </Canvas>

        <Polygon Opacity="0.5" HorizontalAlignment="Left" Panel.ZIndex="1">
            <Polygon.Style>
                <Style TargetType="Polygon">
                    <Setter Property="Fill" Value="Green" />
                    <Setter Property="Points">
                        <Setter.Value>
                            <MultiBinding Converter="{converters:TrackItemFadePositionConverter}" ConverterParameter="{x:Static models:FadeControlType.Left}">
                                <Binding Path="Project" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TimelineControl}" />
                                <Binding Path="Project.TimelineZoom" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TimelineControl}" />
                                <Binding />
                                <Binding Path="FadeInFrame" />
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Polygon.Style>
        </Polygon>

        <Polygon Opacity="0.5" HorizontalAlignment="Right" Panel.ZIndex="1">
            <Polygon.Style>
                <Style TargetType="Polygon">
                    <Setter Property="Fill" Value="Red" />
                    <Setter Property="Points">
                        <Setter.Value>
                            <MultiBinding Converter="{converters:TrackItemFadePositionConverter}" ConverterParameter="{x:Static models:FadeControlType.Right}">
                                <Binding Path="Project" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TimelineControl}" />
                                <Binding Path="Project.TimelineZoom" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:TimelineControl}" />
                                <Binding />
                                <Binding Path="FadeOutFrame" />
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Polygon.Style>
        </Polygon>

        <Border x:Name="resizeBorder" BorderBrush="Orange" Margin="-1" />

    </Grid>

</Border>
